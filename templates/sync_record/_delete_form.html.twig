<form method="post" action="{{ path('sync_record_delete', {'id': sync_record.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sync_record.id) }}">
    <button class="btn">Delete</button>
</form>
